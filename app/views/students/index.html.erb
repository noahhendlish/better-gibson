<style>
    .head{
        background-color:rgb(41,92,77);
        color: white;
    }
    
    .rowA{background-color:rgb(185,217,235);}
    
    .rowB{background-color:white;}
</style>
<h1>Student Account</h1>
<%= link_to 'Click here to create account', "students/new" %>
<br /><br /><br />
<table class='studentlist' border=1>
    <tr class='head'>
        <td>Major</td>
        <td>First Name</td>
        <td>Last Name</td>
        <td>Email</td>
        <td>Student ID</td>
        <td>Graduation Year</td>
        <td>Credits Taken</td>
        <td>Days</td>
        <td>Start</td>
        <td>Finish</td>
        <td>Credit Hours</td>
    </tr>
    <% studentname = 'rowA' %>
    <% @students.each do |student| %>
        <tr class=<%= studentname %>>
            <td><%=student.major %></td>
            <td><%=student.first_name %></td>
            <td><%=student.last_name %></td>
            <td><%=student.email %></td>
            <td><%=student.student_id %></td>
            <td><%=student.grad_year %></td>
            <td><%=student.credits_taken %></td>
        </tr>
        <% if studentname ==  'rowA' %>
            <% studentname = 'rowB' %>
        <% else %>
            <% studentname = 'rowA' %>
        <% end %>
    <% end %>
</table>
